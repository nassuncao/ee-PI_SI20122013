@model PI_MVC.Models.ChangePasswordModel

@{
    ViewBag.Title = "Alterar Password";
}

<div class="changePasswordForm">
    <h2>@ViewBag.Title</h2>
    <p>
        Use o seguinte formulário para alterar a sua password.
    </p>
    <p>
        As passwords devem ter no mínimo @Membership.MinRequiredPasswordLength caracteres.
    </p>
    <br />

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm()) {
        <div>
            <fieldset>
                <legend>Informações da conta</legend>
                <div>
                    @Html.LabelFor(m => m.OldPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.OldPassword)
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
                <div>
                    @Html.LabelFor(m => m.NewPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.NewPassword)
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
                <div>
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <p>
                    <input type="submit" value="Alterar password" />
                </p>
            </fieldset>
            @Html.ValidationSummary(true, "Ocorreu um erro ao alterar a password. Por favor corrija os erros e tente novamente:")
        </div>
    }
</div>