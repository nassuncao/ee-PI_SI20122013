@model PI_MVC.Models.User

@{
    ViewBag.Title = "EditProfile";
}

<h2>EditProfile</h2>

<h2>Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("EditProfile", "User", new {userId = Model.NickName }))
{
    <p class ="editor-label">
        Name: @Html.EditorFor(m => m.Name)
    </p>
    <p class="display-label">
        Nick Name:@Html.DisplayFor(m => m.NickName)
    </p>
     <p class ="editor-label">
        Email: @Html.EditorFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </p>
     <p class="display-label">
        Role: @Html.DisplayFor(m => m.Role)
    </p>
     <p>
        <input type="submit" value="Edit" />
    </p>
}
